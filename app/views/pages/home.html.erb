<h4> Click on the #Hashtags below to view the daily entries!</h4>

<div id="mainButtons">
  <% @tags.each do |tag| %>
  <%#= link_to("##{tag}", root_path(q: tag), class: 'btn btn-primary') %>
  <%= link_to("##{tag}", 'javascript:void(0)', class: 'filter btn btn-primary', 'data-filter' => tag) %>
  <% end %>
</div>


</div>

<div class="container">
  <div class="row">
    <% @search.each do |instagram| %>
    <div class="col-sm-8 col-md-4" data-tags="<%= instagram.tags.join(' ') %>">
      <div class="profile-panel">
        <div class="thumbnail">
          <%= image_tag instagram.images.low_resolution.url %>  
        </div>
        <div class="profile-image">
          <%= image_tag instagram.user.profile_picture %>
        </div>
      </div>
      <h4 class="caption">
        <%= truncate(instagram.caption.text, length: 20) %>
      </h4>
    </div>
    <% end %>
  </div>   
</div>